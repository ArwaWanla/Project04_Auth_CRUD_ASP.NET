@model HotelModel

@{ 
    var hotel = (HotelModel)ViewData["Hotel"];
}

<form method="post" asp-action="Edit" class="form-horizontal">
    <div class="form-group">

        <input type="hidden" asp-for="HotelId" />

    </div>

    <div class="form-group">
        <label asp-for="HotelName">Hotel Name</label>
        <div>
            <input asp-for="HotelName" value="@hotel.HotelName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HotelImage">Hotel Image</label>
        <div>
            <input asp-for="HotelImage" value="@hotel.HotelImage" />
        </div>
   
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <div>
            <input asp-for=" City" value="@hotel.City" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <div>
            <input asp-for="State" value="@hotel.State" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ZipCode">Zip Code</label>
        <div>
            <input asp-for=" ZipCode" value="@hotel.ZipCode" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Numebr</label>
        <div>
            <input asp-for=" PhoneNumber" value="@hotel.PhoneNumber" />
        </div>
    </div>

    <div class="form-group">


        <input type="submit" class="btn btn-primary" value="Update" />

    </div>
</form>